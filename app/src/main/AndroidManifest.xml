<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jozzee.moviespoils" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.jozzee.moviespoils.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddMovieActivity"
            android:label="@string/title_activity_add_moive" >
        </activity>
        <activity
            android:name="com.example.jozzee.moviespoils.SpoilActivity"
            android:label="@string/title_activity_spoil" >
        </activity>
        <activity
            android:name="com.example.jozzee.moviespoils.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
    </application>

</manifest>
